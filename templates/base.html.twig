<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>{% block title %}Mes Gardes{% endblock %}</title>
        <!-- Favicon Intranet -->
        <link rel="icon" href="{{ asset('assets/moodle_favicon.ico') }}">
        <!-- Font Awesome 6.4.0 (Free) -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <!-- Google fonts -->
        <link  rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:400%7CRaleway:500">
        <!-- Bootstrap 5.2.3 CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
        <!-- Base CSS -->
        <link rel="stylesheet" href="{{ asset('css/base.css') }}">


        {% block stylesheets %}
        {% endblock %}

    </head>
    <body>
        <header class="d-flex justify-content-center">
            <div class="col-10">
                <img src="{{ asset('assets/oniris_banner.jpg') }}">
            </div>
            <div>

            </div>
        </header>
        <main>
            <div class="m-auto">
                <div class="container">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <h1 class="mx-auto text-center p-2">Gardes étudiantes</h1>
                    </div>
                </div>
                <div class="container py-2 px-4 d-flex align-items-center justify-content-center position-static">
                    {% for group,messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ group }} mt-2 col-7 text-center" role="alert">{{ message }}</div>
                        {% endfor %}
                    {% endfor %}
                </div>
             </div>
            <div class="d-flex justify-content-center">
                <nav class="nav nav-tabs flex-column flex-sm-row col-9" id="navbar-top">
                    <a class="flex-sm-fill text-sm-center nav-link" href="{{ path('enrolment_index', {'id': 2}) }}">Accueil</a>
                    <a class="flex-sm-fill text-sm-center nav-link active" aria-current="page" href="{{ path('listeParDate') }}">Liste par date</a>
                    <a class="flex-sm-fill text-sm-center nav-link" href="{{ path('calendrier', {'id': 2}) }}">Calendrier</a>
                    <a class="flex-sm-fill text-sm-center nav-link" href="{{ path('student_list', {'id': 2}) }}">Liste par étudiants</a>
                    <a class="flex-sm-fill text-sm-center nav-link" href="#">Historique des échanges</a>
                </nav>
            </div>
            <section class="d-flex justify-content-center">
                <div class="bg-light p-2 col-11">
                    <h2 class="mx-auto text-center p-2">
                        {% block h2 %}
                            Titre h2
                        {% endblock %}
                    </h2>
                    <div class="d-flex justify-content-center">
                        {% block main %}
                        {% endblock %}
                    </div>
                </div>
            </section>
        </main>

        <footer class="bg-dark small text-center text-white-50 p-4" id="footer">
            <div class="container p-1">&copy; Oniris, Nantes | Pôle Applicatif 2023</div>
        </footer>

        <!-- Bootstrap 5.2.3 JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src = {{ asset('js/base.js') }}></script>

        {% block javascripts %}
        {% endblock %}

    </body>
</html>
