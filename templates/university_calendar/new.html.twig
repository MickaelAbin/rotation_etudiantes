{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block h2 %}Calendrier Universitaire{% endblock %}

{% block main %}

    <div class="container-fluid">
        {% form_theme form 'bootstrap_5_layout.html.twig' %}
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                {{ form_row(form.academicLevel) }}
                <div class="row">
                    <div class="col-lg-6 col-sm-12 ">{{ form_row(form.startDate) }}</div>
                    <div class="col-lg-6 col-sm-12 ">{{ form_row(form.endDate) }}</div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12">

                <div class="row">
                    {{ form_label(form.publicHolidays) }}
                    {{ form_errors(form.publicHolidays) }}
                </div>
                <div class="publicHolidays" data-index="{{ form.publicHolidays | length > 0 ? form.publicHolidays | last.vars.name + 1 : 0 }}"
                        data-prototype="{{ form_widget(form.publicHolidays.vars.prototype.date) | e('html_attr')}}">
                    {% for publicHolidays in form.publicHolidays %}
                        <div class="row">
                            {{ form_row(publicHolidays.date) }}
                        </div>
                    {% endfor %}
                </div>
                    <div>
                        <button type="button" class="add_item_link btn btn-xl btn-primary rounded" data-collection-holder-class="publicHolidays">
                            <i class="fa-2x fa-solid fa-plus" title="Ajouter"></i>
                        </button>
                    </div>
            </div>
            <div class="col-lg-4 col-sm-12">

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4 row justify-content-center">
                <div class="col-lg-4 col-sm-12 "><a href="{{ path('university_calendar_index') }}" class="btn btn-primary btn-xl rounded">Annuler</a></div>
                <div class="col-lg-4 col-sm-12 "> {{ form_row(form.save) }}</div>
            </div>
        </div>
    {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/university_calendar_new.js') }}"></script>
{% endblock %}
